<idea-plugin>
    <id>com.github.katalune.abcfilesystem</id>
    <name>AbcFileSystem</name>
    <vendor>katalune</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.jetbrains.plugins.template.services.MyApplicationService"/>
        <projectService serviceImplementation="org.jetbrains.plugins.template.services.MyProjectService"/>
        <virtualFileSystem key="abc" implementationClass="org.jetbrains.plugins.template.AbcFileSystem"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.katalune.abcfilesystem.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
